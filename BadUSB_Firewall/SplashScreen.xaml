<Window x:Class="BadUSB_Firewall.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize" WindowStyle="None"
        WindowStartupLocation="CenterScreen" Background="Black"
        Title="BadUSB-Firewall" Height="80" Width="590">
    <Grid>
        <Label Content="Loading BadUSB-Firewall. Please wait.." FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        <TextBlock Name="AppVersion"  FontSize="14" Text="{Binding Path=VersionNumber}" Foreground="White" Margin="480,60,0,0" />

    </Grid>
</Window>
